<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://storeServiceScreen.caption"
        messagesPack="com.company.application.web.screens.storeservice">
    <layout>
        <tabSheet>
            <tab id="numberOfPurchasesStoreTab" caption="msg://numberOfPurchasesStoreTab.caption" margin="true,false,false,false">
                <form id="form1">
                    <column width="350px">
                        <pickerField id="storeField" metaClass="application_Store"
                                     caption="msg://storeField.caption" required="true"/>
                        <button id="showStore" caption="msg://showButton.caption"/>
                        <label id="purchasesNumber1" value="msg://purchasesNumber.caption"/>
                    </column>
                </form>
            </tab>
            <tab id="numberOfPurchasesTab" caption="msg://numberOfPurchasesTab.caption" margin="true,false,false,false">
                <form>
                    <column width="350px">
                        <pickerField id="retailerField" metaClass="application_Retailer"
                                     caption="msg://retailerField.caption" required="true"/>
                        <button id="showRetailerButton" caption="msg://showButton.caption"/>
                        <label id="purchasesNumber2" value="msg://purchasesNumber.caption"/>
                    </column>
                </form>
            </tab>
        </tabSheet>
    </layout>
</window>