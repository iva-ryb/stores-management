<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://producerBrowse.caption"
        focusComponent="producersTable"
        messagesPack="com.company.application.web.screens.producer">
    <data readOnly="true">
        <collection id="producersDc"
                    class="com.company.application.entity.Producer">
            <view extends="_local">
                <property name="user" view="_minimal"/>
                <property name="address" view="_minimal"/>
            </view>
            <loader id="producersDl">
                <query>
                    <![CDATA[select e from application_Producer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="producersTable"
            spacing="true">
        <filter id="filter"
                applyTo="producersTable"
                dataLoader="producersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="producersTable"
                    width="100%"
                    dataContainer="producersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name" caption="msg://nameField.caption"/>
                <column id="fullName" caption="msg://fullName.caption"/>
                <column id="user" caption="msg://userName.caption"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="producersTable.create"/>
                <button id="editBtn" action="producersTable.edit"/>
                <button id="removeBtn" action="producersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
