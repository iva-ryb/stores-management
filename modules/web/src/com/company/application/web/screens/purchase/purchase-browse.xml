<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://purchaseBrowse.caption"
        focusComponent="purchasesTable"
        messagesPack="com.company.application.web.screens.purchase">
    <data readOnly="true">
        <collection id="purchasesDc"
                    class="com.company.application.entity.Purchase">
            <view extends="_local">
                <property name="shop" view="_minimal"/>
                <property name="products" view="_minimal">
                    <property name="product" view="_minimal">
                        <property name="name"/>
                    </property>
                    <property name="price"/>
                    <property name="count"/>
                </property>
            </view>
            <loader id="purchasesDl">
                <query>
                    <![CDATA[select e from application_Purchase e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="purchasesTable"
            spacing="true">
        <filter id="filter"
                applyTo="purchasesTable"
                dataLoader="purchasesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="purchasesTable"
                    width="100%"
                    dataContainer="purchasesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="shop.name" caption="msg://shopNameField.caption"/>
                <column id="products.product.name" caption="msg://productNameField.caption"/>
                <column id="products.price" caption="msg://productPrice.caption"/>
                <column id="products.count" caption="msg://productCount.caption"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="purchasesTable.create"/>
                <button id="editBtn" action="purchasesTable.edit"/>
                <button id="removeBtn" action="purchasesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
