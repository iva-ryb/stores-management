<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://producerServiceScreen.caption"
        messagesPack="com.company.application.web.screens.producerservice">
    <data>
        <collection id="productWhoseAmountIsLessThanDc"
                    class="com.company.application.entity.ProductWhoseAmountIsLessThan">
            <view extends="productWhoseAmountIsLessThan-view"/>
            <loader id="producerServiceDl">
                <query>
                    <![CDATA[select e from application_ProductWhoseAmountIsLessThan e]]>
                </query>
            </loader>
        </collection>
        <collection id="storeWithNoSuchProductsDc" class="com.company.application.entity.StoreWithNoSuchProduct">
            <view extends="_local"/>
            <loader id="storeWithNoSuchProductsDl">
                <query>
                    <![CDATA[select e from application_StoreWithNoSuchProduct e]]>
                </query>
            </loader>
        </collection>
        <instance id="priceHistoryDc" class="com.company.application.entity.PriceHistory">
            <view extends="_local"/>
            <loader id="priceHistoryDl"/>
        </instance>
    </data>
    <layout spacing="true">
        <tabSheet>
            <tab id="tab1" caption="msg://tab1.caption" margin="true,false,false,false">
                <form id="form1">
                    <column width="350px">
                        <pickerField id="producerPickerField1" metaClass="application_Producer"
                                     caption="msg://producer.caption"
                                     required="true"/>
                        <pickerField id="storePickerField" metaClass="application_Store" caption="msg://store.caption"
                                     required="true"/>
                        <textField id="countTextField" caption="msg://count.caption" datatype="int" required="true"/>
                        <button id="button1" align="TOP_RIGHT" caption="msg://button1.caption"/>
                        <table id="productWhoseAmountIsLessThanTable" dataContainer="productWhoseAmountIsLessThanDc" width="AUTO" height="AUTO">
                            <columns>
                                <column id="product" caption="msg://product.caption"/>
                                <column id="count" caption="msg://count.caption"/>
                            </columns>
                        </table>
                    </column>
                </form>
            </tab>
            <tab id="tab2" caption="msg://tab2.caption" margin="true,false,false,false">
                <form id="form2">
                    <column width="350px">
                        <pickerField id="producerField2" metaClass="application_Producer"
                                     caption="msg://producer.caption" required="true"/>
                        <pickerField id="productField" metaClass="application_Product"
                                     caption="msg://product.caption" required="true">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </pickerField>
                        <button id="button2" align="TOP_RIGHT" caption="msg://button2.caption"/>
                        <table id="storesWithNoSuchProductTable" dataContainer="storeWithNoSuchProductsDc">
                            <columns>
                                <column id="store" caption="msg://store.caption"/>
                            </columns>
                            <rows/>
                        </table>
                    </column>
                </form>
            </tab>
        </tabSheet>
    </layout>
</window>