<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://shopEdit.caption"
        focusComponent="form"
        messagesPack="com.company.application.web.screens.shop">
    <data>
        <instance id="shopDc"
                  class="com.company.application.entity.Shop">
            <view extends="_local">
                <property name="storeChain" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="shopDc">
            <column width="350px">
                <textField id="numberField" property="number" caption="msg://numberField.caption"/>
                <textField id="nameField" property="name" caption="msg://nameField.caption"/>
                <pickerField id="storeChainField" property="storeChain" caption="msg://storeChainField.caption">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
