<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://shopEdit.caption"
        focusComponent="form"
        messagesPack="com.company.application.web.screens.shop">
    <data>
        <instance id="shopDc"
                  class="com.company.application.entity.Shop">
            <view extends="_local">
                <property name="storeChain" view="_minimal"/>
                <property name="address" view="_minimal">
                    <property name="city"/>
                    <property name="street"/>
                    <property name="house"/>
                </property>
            </view>
            <loader/>
        </instance>
        <collection id="listOfProductsDc" class="com.company.application.entity.ListOfProducts">
            <view extends="_local">
                <property name="product">
                    <property name="name"/>
                </property>
            </view>
            <loader id="listOfProductsDl">
                <query>
                    <![CDATA[select e from application_ListOfProducts e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <tabSheet>
            <tab id="editShopTab" caption="msg://editShopTab.caption" margin="true,false,false,false" spacing="true">
                <form id="form" dataContainer="shopDc">
                    <column width="350px">
                        <textField id="numberField" property="number" caption="msg://numberField.caption"/>
                        <textField id="nameField" property="name" caption="msg://nameField.caption"/>
                        <pickerField id="storeChainField" property="storeChain" caption="msg://storeChainField.caption">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </pickerField>
                        <textField id="addressCity" property="address.city" caption="msg://addressCity.caption"/>
                        <textField id="addressStreet" property="address.street" caption="msg://addressStreet.caption"/>
                        <textField id="addressHouse" property="address.house" caption="msg://addressHouse.caption"/>
                    </column>
                </form>
            </tab>
            <tab id="productsTab" caption="msg://productsTab.caption" margin="true,false,false,false" spacing="true">
                <groupTable id="productsTable"
                            width="100%"
                            dataContainer="listOfProductsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="productsTable.create"/>
                        <button id="editBtn" action="productsTable.edit"/>
                        <button id="removeBtn" action="productsTable.remove"/>
                    </buttonsPanel>
                    <columns>
                        <column id="product.name" caption="msg://productsTabProductField.caption"/>
                        <column id="price" caption="msg://productsTabPriceField.caption"/>
                        <column id="count" caption="msg://productsTabCountField.caption"/>
                    </columns>
                </groupTable>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
