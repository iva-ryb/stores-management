<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://shopBrowse.caption"
        focusComponent="shopsTable"
        messagesPack="com.company.application.web.screens.shop">
    <data readOnly="true">
        <collection id="shopsDc"
                    class="com.company.application.entity.Shop">
            <view extends="_local">
                <property name="storeChain" view="_minimal"/>
                <property name="address" view="_minimal"/>
            </view>
            <loader id="shopsDl">
                <query>
                    <![CDATA[select e from application_Shop e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="shopsTable"
            spacing="true">
        <filter id="filter"
                applyTo="shopsTable"
                dataLoader="shopsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="shopsTable"
                    width="100%"
                    dataContainer="shopsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="number" caption="msg://numberField.caption"/>
                <column id="name" caption="msg://nameField.caption"/>
                <column id="storeChain" caption="msg://storeChainField.caption"/>
                <column id="address" caption="msg://addressField.caption"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="shopsTable.create"/>
                <button id="editBtn" action="shopsTable.edit"/>
                <button id="removeBtn" action="shopsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
