<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://purchaseEdit.caption"
        focusComponent="form"
        messagesPack="com.company.application.web.screens.purchase">
    <data>
        <instance id="purchaseDc"
                  class="com.company.application.entity.Purchase">
            <view extends="_local">
                <property name="store" view="_minimal"/>
                <property name="products" view="_minimal">
                    <property name="product" view="_minimal">
                        <property name="name"/>
                    </property>
                    <property name="price"/>
                    <property name="count"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="purchaseDc">
            <column width="350px">
                <pickerField id="storeNameField" property="store" caption="msg://storeNameField.caption">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="productNameField" property="products.product" caption="msg://productNameField.caption">
                    <actions>
                        <action id="lookup" type="picker_lookup" caption="msg://productPrice.caption"/>
                        <action id="clear" type="picker_clear" caption="msg://productCount.caption"/>
                    </actions>
                </pickerField>
                <textField id="productPriceField" property="products.price" caption="msg://productPrice.caption"/>
                <textField id="productCountField" property="products.count" caption="productCount.caption"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
