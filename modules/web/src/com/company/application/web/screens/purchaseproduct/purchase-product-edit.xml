<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://purchaseProductEdit.caption"
        focusComponent="form"
        messagesPack="com.company.application.web.screens.purchaseproduct">
    <data>
        <instance id="purchaseProductDc"
                  class="com.company.application.entity.PurchaseProduct">
            <view extends="_local">
                <property name="product" view="_minimal"/>
                <property name="purchase" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="purchaseProductDc">
            <column width="350px">
                <pickerField id="productField" property="product" caption="msg://productField.caption">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="countField" property="count" caption="msg://countField.caption"/>
                <pickerField id="purchaseField" property="purchase" caption="msg://purchaseField.caption">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
