<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://producerEdit.caption"
        focusComponent="form"
        messagesPack="com.company.application.web.screens.producer">
    <data>
        <instance id="producerDc"
                  class="com.company.application.entity.Producer">
            <view extends="_local">
                <property name="user" view="_minimal"/>
                <property name="address" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="producerDc">
            <column width="350px">
                <textField id="nameField" property="name" caption="msg://nameField.caption"/>
                <textField id="fullNameField" property="fullName" caption="msg://fullName.caption"/>
                <textField id="cityField" property="address.city" caption="msg://cityField.caption"/>
                <textField id="streetField" property="address.street" caption="msg://streetField.caption"/>
                <textField id="buildingField" property="address.building" caption="msg://buildingField.caption"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
