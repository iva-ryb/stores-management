<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://storeChainEdit.caption"
        focusComponent="form"
        messagesPack="com.company.application.web.screens.storechain">
    <data>
        <instance id="storeChainDc"
                  class="com.company.application.entity.StoreChain">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="storeChainDc">
            <column width="350px">
                <textField id="nameField" property="name" caption="msg://storeChainNameField.caption"/>
                <textField id="fullNameField" property="fullName" caption="msg://storeChainFullNameField.caption"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
