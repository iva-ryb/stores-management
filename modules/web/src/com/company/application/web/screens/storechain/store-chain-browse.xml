<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://storeChainBrowse.caption"
        focusComponent="storeChainsTable"
        messagesPack="com.company.application.web.screens.storechain">
    <data readOnly="true">
        <collection id="storeChainsDc"
                    class="com.company.application.entity.StoreChain">
            <view extends="_local"/>
            <loader id="storeChainsDl">
                <query>
                    <![CDATA[select e from application_StoreChain e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="storeChainsTable"
            spacing="true">
        <filter id="filter"
                applyTo="storeChainsTable"
                dataLoader="storeChainsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="storeChainsTable"
                    width="100%"
                    dataContainer="storeChainsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name" caption="msg://storeChainNameField.caption"/>
                <column id="fullName" caption="msg://storeChainFullNameField.caption"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="storeChainsTable.create"/>
                <button id="editBtn" action="storeChainsTable.edit"/>
                <button id="removeBtn" action="storeChainsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
