<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://retailerBrowse.caption"
        focusComponent="retailersTable"
        messagesPack="com.company.application.web.screens.retailer">
    <data readOnly="true">
        <collection id="retailersDc"
                    class="com.company.application.entity.Retailer">
            <view extends="_local"/>
            <loader id="retailersDl">
                <query>
                    <![CDATA[select e from application_Retailer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="retailersTable"
            spacing="true">
        <filter id="filter"
                applyTo="retailersTable"
                dataLoader="retailersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="retailersTable"
                    width="100%"
                    dataContainer="retailersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name" caption="msg://retailerNameField.caption"/>
                <column id="fullName" caption="msg://retailerFullNameField.caption"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="retailersTable.create"/>
                <button id="editBtn" action="retailersTable.edit"/>
                <button id="removeBtn" action="retailersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
