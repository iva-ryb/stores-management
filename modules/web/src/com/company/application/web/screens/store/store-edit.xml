<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://storeEdit.caption"
        focusComponent="form"
        messagesPack="com.company.application.web.screens.store">
    <data>
        <instance id="storeDc"
                  class="com.company.application.entity.Store"
                  view="store-view">
            <loader/>
            <collection id="storeProductDc" property="storeProducts"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <tabSheet>
            <tab id="editStoreTab" caption="msg://editStoreTab.caption" margin="true,false,false,false" spacing="true">
                <form id="form" dataContainer="storeDc">
                    <column width="350px">
                        <textField id="numberField" property="number" caption="msg://numberField.caption"/>
                        <textField id="nameField" property="name" caption="msg://nameField.caption"/>
                        <pickerField id="storeChainField" property="storeChain" caption="msg://storeChainField.caption">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </pickerField>
                        <textField id="addressCity" property="address.city" caption="msg://addressCity.caption"/>
                        <textField id="addressStreet" property="address.street" caption="msg://addressStreet.caption"/>
                        <textField id="addressBuilding" property="address.building" caption="msg://addressBuilding.caption"/>
                    </column>
                </form>
                <hbox id="editActions" spacing="true">
                    <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
                    <button id="closeBtn" action="windowClose"/>
                </hbox>
            </tab>
            <tab id="productsTab" caption="msg://productsTab.caption" margin="true,false,false,false" spacing="true">
                <groupBox id="storeProductsBox" caption="Products">
                    <table id="storeProductsTable" dataContainer="storeProductDc" width="100%" height="200px">
                        <actions>
                            <action id="create" type="create">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                            <action id="edit" type="edit">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                            <action id="remove" type="remove"/>
                        </actions>
                        <buttonsPanel alwaysVisible="true">
                            <button id="storeProductsTableCreateBtn" action="storeProductsTable.create"/>
                            <button id="storeProductsTableEditBtn" action="storeProductsTable.edit"/>
                            <button id="storeProductsTableRemoveBtn" action="storeProductsTable.remove"/>
                        </buttonsPanel>
                        <columns>
                            <column id="product" caption="Product"/>
                            <column id="price" caption="Price"/>
                            <column id="count" caption="Amount"/>
                        </columns>
                    </table>
                </groupBox>
            </tab>
        </tabSheet>
    </layout>
</window>
