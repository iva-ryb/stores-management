<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://listOfProductsEdit.caption"
        focusComponent="form"
        messagesPack="com.company.application.web.screens.listofproducts">
    <data>
        <instance id="listOfProductsDc"
                  class="com.company.application.entity.ListOfProducts">
            <view extends="_local">
                <property name="shop" view="_minimal"/>
                <property name="product" view="_minimal">
                    <property name="name"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="listOfProductsDc">
            <column width="350px">
                <textField id="productField" property="product.name" caption="msg://nameProductField.caption"/>
                <textField id="priceField" property="price" caption="msg://priceField.caption"/>
                <textField id="countField" property="count" caption="msg://countField.caption"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
