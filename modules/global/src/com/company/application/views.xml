<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view entity="application_Manufacturer" name="manufacturer-view" extends="_local">
        <property name="user" view="_minimal"/>
    </view>
    <view entity="application_Product" name="product-view" extends="_local">
        <property name="manufacturer" view="_minimal">
            <property name="name"/>
            <property name="user" view="_minimal"/>
        </property>
    </view>
    <view entity="application_StoreChain" name="storeChain-view" extends="_local"/>
    <view entity="application_Purchase" name="purchase-view" extends="_local">
        <property name="shop" view="_minimal"/>
        <property name="products" view="_minimal">
            <property name="product" view="_minimal">
                <property name="name"/>
            </property>
            <property name="price"/>
            <property name="count"/>
        </property>
    </view>
    <view entity="application_Shop" name="shop-view" extends="_local">
        <property name="address" view="_minimal">
            <property name="city"/>
            <property name="street"/>
            <property name="house"/>
        </property>
    </view>
</views>