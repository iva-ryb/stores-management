<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">


    <view entity="application_Producer" name="producer-view" extends="_local">
        <property name="user" view="_minimal"/>
    </view>
    <view entity="application_Product" name="product-view" extends="_local">
        <property name="producer" view="_minimal">
            <property name="name"/>
        </property>
    </view>
    <view entity="application_Store" name="store-view" extends="_local">
        <property name="retailer" view="_minimal">
        </property>
        <property name="address" view="_minimal">
        </property>
        <property name="storeProducts" view="_minimal">
            <property name="product" view="_minimal">
                <property name="producer" view="_minimal"/>
                <property name="priceFromProducer"/>
            </property>
            <property name="price"/>
            <property name="count"/>
        </property>
    </view>
    <view entity="application_Retailer" name="retailer-view" extends="_local"/>
    <view entity="application_StoreProduct" name="storeProduct-view" extends="_local">
        <property name="product" view="_minimal">
            <property name="priceFromProducer"/>
        </property>
        <property name="store" view="_minimal">
            <property name="storeProducts" view="_minimal">
                <property name="store" view="store-view"/>
                <property name="product" view="product-view"/>
            </property>
        </property>
    </view>
    <view entity="application_Purchase" name="purchase-view" extends="_local">
        <property name="store" view="_minimal">
            <property name="storeProducts" view="_minimal">
                <property name="product" view="_minimal"/>
                <property name="count"/>
            </property>
        </property>
        <property name="purchaseProducts" view="_minimal"/>
    </view>
    <view entity="application_PurchaseProduct" name="purchaseProduct-view" extends="_local">
        <property name="product" view="_minimal">
            <property name="producer" view="_minimal"/>
        </property>
        <property name="purchase" view="_minimal">
            <property name="store" view="_minimal">
                <property name="storeProducts" view="storeProduct-view">
                    <property name="store" view="_minimal"/>
                    <property name="product" view="_minimal"/>
                </property>
            </property>
        </property>
    </view>
</views>