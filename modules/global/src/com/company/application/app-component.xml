<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.addon.maps, com.haulmont.charts, com.haulmont.reports, com.haulmont.cuba, com.haulmont.addon.dashboard, com.haulmont.addon.restapi, com.haulmont.addon.helium, com.haulmont.addon.bproc">

    <module name="global" blocks="*">
        <artifact name="app-global" appJar="true"/>

        <property name="cuba.persistenceConfig" value="+com/company/application/persistence.xml"/>
        <property name="cuba.metadataConfig" value="+com/company/application/metadata.xml"/>
        <property name="cuba.viewsConfig" value="+com/company/application/views.xml"/>
    </module>
    <module name="core" dependsOn="global" blocks="core">
        <artifact name="app-core" appJar="true"/>
        <artifact name="app-core" classifier="db" ext="zip" configuration="dbscripts"/>

        <property name="cuba.springContextConfig" value="+com/company/application/spring.xml"/>
        <property name="cuba.mainMessagePack" value="+com.company.application.core"/>
    </module>
    <module name="web" dependsOn="global" blocks="web">
        <artifact name="app-web" appJar="true"/>
        <artifact name="app-web" classifier="web" ext="zip" configuration="webcontent"/>
        <artifact name="app-web-toolkit" appJar="true" classifier="client" ext="jar"
                  skipIfExists="web-toolkit"/>
        <artifact name="app-web" ext="jar" configuration="themes" classifier="themes"/>

        <property name="cuba.springContextConfig" value="+com/company/application/web-spring.xml"/>
        <property name="cuba.dispatcherSpringContextConfig" value="+com/company/application/web-dispatcher-spring.xml"/>
        <property name="cuba.windowConfig" value="+com/company/application/web-screens.xml"/>
        <property name="cuba.menuConfig" value="+com/company/application/web-menu.xml"/>
        <property name="cuba.permissionConfig" value="+com/company/application/web-permissions.xml"/>
        <property name="cuba.mainMessagePack" value="+com.company.application.web"/>
        <property name="cuba.web.widgetSet" value="com.company.application.web.toolkit.ui.AppWidgetSet"/>
    </module>
    <module name="web-toolkit" dependsOn="web">
        <artifact name="app-web-toolkit"/>
    </module>
</app-component>